#se declara la clase Calculadora
class Calculadora:
   # declaramos el metodo __init__
    def __init__(self):
      self.valor1=int(input("Ingrese el valor 1: "))
      self.valor2=int(input("Ingrese el valor 2: "))
   # declaramos el metodo suma
    def suma(self):
     print('la suma de los dos valores es de:', 
      self.valor1+self.valor2)
    # declaramos el metodo resta
    def resta(self):
      print('la resta de los dos valores es de:', self.valor1-self.valor2)
    # declaramos el metodo multiplicacion
    def multiplicacion(self):
     print('la multiplicacion de los dos valores es de:', self.valor1*self.valor2)
    # declaramos el metodo division
    def division(self):
     print('la division de los dos valores es de:', self.valor1/self.valor2)
# bloque principal
clase=Calculadora()
clase.suma()
clase.resta()
clase.multiplicacion()
clase.division()
    
